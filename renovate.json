{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "enabled": false,
      "matchManagers": [
        "terraform"
      ],
      "matchPackageNames": [
        "Azure/aks/azurerm"
      ]
    },
    {
      "enabled": false,
      "matchFiles": [
        "modules/azure/aks/main.tf"
      ],
      "matchManagers": [
        "terraform"
      ],
      "matchPackageNames": [
        "hashicorp/azurerm"
      ]
    },
    {
      "automerge": true,
      "description": "Automerge non-major updates",
      "matchCurrentVersion": "!/^0/",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ],
  "pre-commit": {
    "enabled": true
  }
}
